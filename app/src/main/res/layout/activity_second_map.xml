                android:onClick="jehangirSabvalaGallery"
                android:scaleX="1.01"
                android:src="@drawable/s29" />

            <ImageView
                android:id="@+id/s30"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s29"
                android:src="@drawable/s30" />

            <ImageView
                android:id="@+id/s31"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s30"
                android:scaleX="1.03"
                android:src="@drawable/s31" />

            <ImageView
                android:id="@+id/s32"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s31"
                android:scaleX="1.01"
                android:src="@drawable/s32" />
        </RelativeLayout>

        <!-- Fifth Row -->
        <RelativeLayout
            android:id="@+id/fifth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fourth">

            <ImageView
                android:id="@+id/s33"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:src="@drawable/s33" />

            <ImageView
                android:id="@+id/s34"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@id/s33"
                android:src="@drawable/s34" />

            <ImageView
                android:id="@+id/s35"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s34"
                android:src="@drawable/s35" />

            <ImageView
                android:id="@+id/s36"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s35"
                android:src="@drawable/s36" />

            <ImageView
                android:id="@+id/s37"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s36"
                android:src="@drawable/s37" />

            <ImageView
                android:id="@+id/s38"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s37"
                android:src="@drawable/s38" />

            <ImageView
                android:id="@+id/s39"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s38"
                android:src="@drawable/s39" />

            <ImageView
                android:id="@+id/s40"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s39"
                android:src="@drawable/s40" />
        </RelativeLayout>

    </RelativeLayout>


    <!-- Second Floor Text is put below all images layout but
    it is displayed above it because Relative Layout is
    Aligned to be Center in Parent-->
    <RelativeLayout
        android:id="@+id/relative_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/second_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Second Floor"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

