<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleX="1.02"
        android:scaleY="1.02">

        <!-- First Row -->
        <RelativeLayout
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.02">

            <ImageView
                android:id="@+id/s1"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:src="@drawable/s1" />

            <ImageView
                android:id="@+id/s2"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@id/s1"
                android:onClick="chineseJapaneseGallery"
                android:src="@drawable/s2" />

            <ImageView
                android:id="@+id/s3"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s2"
                android:onClick="chineseJapaneseGallery"
                android:src="@drawable/s3" />

            <ImageView
                android:id="@+id/s4"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s3"
                android:src="@drawable/s4" />

            <ImageView
                android:id="@+id/s5"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s4"
                android:src="@drawable/s5" />

            <ImageView
                android:id="@+id/s6"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s5"
                android:onClick="indianTextilesCostumesGallery"
                android:src="@drawable/s6" />

            <ImageView
                android:id="@+id/s7"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s6"
                android:src="@drawable/s7" />

            <ImageView
                android:id="@+id/s8"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s7"
                android:src="@drawable/f8" />
        </RelativeLayout>

        <!-- Second Row -->
        <RelativeLayout
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first"
            android:scaleY="1.01">

            <ImageView
                android:id="@+id/s9"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:src="@drawable/s9" />

            <ImageView
                android:id="@+id/s10"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@id/s9"
                android:onClick="bombaySchoolGallery"
                android:scaleY="1.02"
                android:src="@drawable/s10" />

            <ImageView
                android:id="@+id/s11"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s10"
                android:src="@drawable/s11" />

            <ImageView
                android:id="@+id/s12"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s11"
                android:src="@drawable/s12" />

            <ImageView
                android:id="@+id/s13"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s12"
                android:src="@drawable/s13" />

            <ImageView
                android:id="@+id/s14"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s13"
                android:onClick="indianTextilesCostumesGallery"
                android:scaleY="1.02"
                android:src="@drawable/s14" />

            <ImageView
                android:id="@+id/s15"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s14"
                android:src="@drawable/s15" />

            <ImageView
                android:id="@+id/s16"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s15"
                android:src="@drawable/s16" />
        </RelativeLayout>

        <!-- Third Row -->
        <RelativeLayout
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second"
            android:scaleY="1.01">

            <ImageView
                android:id="@+id/s17"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:onClick="europeanPaintingGalleryL"
                android:src="@drawable/s17" />

            <ImageView
                android:id="@+id/s18"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@id/s17"
                android:onClick="europeanPaintingGalleryL"
                android:src="@drawable/s18" />

            <ImageView
                android:id="@+id/s19"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s18"
                android:src="@drawable/s19" />

            <ImageView
                android:id="@+id/s20"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s19"
                android:onClick="europeanPaintingGalleryR"
                android:src="@drawable/s20" />

            <ImageView
                android:id="@+id/s21"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s20"
                android:src="@drawable/s21" />

            <ImageView
                android:id="@+id/s22"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s21"
                android:onClick="indianTextilesCostumesGallery"
                android:src="@drawable/s22" />

            <ImageView
                android:id="@+id/s23"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s22"
                android:src="@drawable/s23" />

            <ImageView
                android:id="@+id/s24"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s23"
                android:src="@drawable/s24" />
        </RelativeLayout>

        <!-- Fourth Row -->
        <RelativeLayout
            android:id="@+id/fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third">

            <ImageView
                android:id="@+id/s25"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:src="@drawable/s25" />

            <ImageView
                android:id="@+id/s26"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@id/s25"
                android:scaleX="1.01"
                android:src="@drawable/s26" />

            <ImageView
                android:id="@+id/s27"
                android:layout_width="84dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@+id/s26"
                android:onClick="armsArmourGallery"
